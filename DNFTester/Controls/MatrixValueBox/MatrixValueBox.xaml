<UserControl x:Class="DNFTester.Controls.MatrixValueBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             x:Name="Self">
    <Border>
        <TextBlock Width="22"
                   Height="22"
                   FontSize="16"
                   Focusable="False"
                   Text="{Binding Path=Value.Value, ElementName=Self}"
                   TextAlignment="Center"
                   TextWrapping="NoWrap"/>
    </Border>
</UserControl>
