<UserControl x:Class="DNFTester.Controls.StatusBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             x:Name="Self"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="600">
    <StackPanel Orientation="Horizontal"
                Margin="4,5,5,4">
        <TextBlock Text="{Binding Timer}"
                   FontWeight="Bold"
                   VerticalAlignment="Center" 
                   Width="70"/>
        <TextBlock Text="{Binding Message}"
                   FontWeight="Bold"
                   VerticalAlignment="Center" />
        <Image Source="{Binding Status, Converter={StaticResource ApplicationValidatioStateConvertern}}"
               VerticalAlignment="Center"
               Width="20"
               Height="20" />
    </StackPanel>
</UserControl>
